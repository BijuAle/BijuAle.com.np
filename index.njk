---
layout: base.njk
title: Essays
---
{% block title %}
  <h1>{{title}}</h1>
{% endblock %}

{% block content %}
  <ul id="list_essays">
    {%- for post in collections.posts | reverse -%}
      <li>
      &#10032;<a href={{post.url}}>
          {{ post.data.title }}</a>
        <span class="date">{{post.date | postDate}}</span>
      </li>
    {% endfor %}
  </ul>
{% endblock %}