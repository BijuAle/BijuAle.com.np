---
layout: "layouts/base.njk"
pagination:
  data: collections
  size: 1
  alias: tag
permalink: /tags/{{ tag }}/
---

<a href="{{ '/' }}"><button>All Essays</button></a>
<h1>Posts tagged: “{{ tag }}”</h1>
  <ul>
    {% set taglist = collections[ tag ] %} {% for post in taglist | reverse %}
    <li>
      &#10032;<a href="{{ post.url }}"> {{ post.data.title }}</a>
      <span class="date-post">{{ post.date | formatted }}</span>
    </li>
    {% endfor %}
  </ul>
<hr />
<div class="other-tags">
  <ul>
    {% for tagInfo in collections.tags %}
    <li>
      <a href="/tags/{{ tagInfo.tag | url }}"
        >{{ tagInfo.tag }} ({{ tagInfo.count }})</a
      >
    </li>
    {% endfor %}
  </ul>
</div>

<style>
.date-post {
    float: right;
    opacity: 40%;
  }
 .other-tags::after {
    content: "";
    display: table;
    clear: both;
  }
  .other-tags ul li {
    float: left;
    border: 1px solid grey;
    padding: 3px;
    margin: 4px;
    border-radius: 5px;
  }

  
</style>
