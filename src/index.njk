---
layout: layouts/base.njk
title: Essays
pagination:
  size: 20
  data: collections.post
  alias: posts
  reverse: true
---

<div>
  <ul>
    {% for post in pagination.items %}
    <li>
      &#10032;<a href="{{ post.url }}"> {{ post.data.title }}</a>
      <span class="date-post">{{ post.date | formatted }}</span>
    </li>
    {% endfor %}
  </ul>
</div>

<div class="post-pagination">
  <a href="{{ pagination.href.previous }}"><button>Previous</button></a>{%- for
  pageEntry in pagination.pages %}
  <a href="{{ pagination.hrefs[loop.index0] }}">{{ loop.index }}</a>
  {%- endfor %} <a href="{{ pagination.href.next }}"><button>Next</button></a>
</div>

